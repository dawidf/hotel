{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Reservation</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Reserveddate</th>
                <td>{{ entity.reservedDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>startReservation</th>
                <td>{{ entity.startReservation|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>endReservation</th>
                <td>{{ entity.endReservation|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Services</th>
                <td>
                    {% for service in entity.services %}
                        <span>{{ service }}</span>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('reservation') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('reservation_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
